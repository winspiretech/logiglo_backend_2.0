#!/bin/sh
. "$(dirname -- "$0")/_/husky.sh"

# Validate Docker Compose configuration
echo "Validating Docker Compose configuration..."
docker-compose config --quiet || { echo "Docker Compose configuration check failed."; exit 1; }

# Build Docker image
echo "Building Docker image..."
docker build --no-cache -t logiglo_backend:test . || { echo "Docker image build failed."; exit 1; }